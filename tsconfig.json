{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@abi": ["abi"],
      "@components": ["components"],
      "@constants": ["constants"],
      "@contexts": ["contexts"],
      "@pages": ["pages"],
      "@types": ["types"],
      "@utils": ["utils"],
      "@contracts": ["../contracts"]
    }
  }
}
